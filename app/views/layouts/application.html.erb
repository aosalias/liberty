<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
  <head>
    <title><%= h("Democracy: " + (yield(:title) || controller.controller_name.to_s.capitalize)) %></title>
    <%= stylesheet_link_tag 'application', 'bills', 'bill_votes' %>
    <%= javascript_include_tag 'jquery-1.3.2.min','jquery.form', 'application' %>
    <%= javascript_include_tag :only_jelly, *application_jelly_files %>
    <%= spread_jelly %>

    <%= yield(:head) %>
  </head>
  <body>
    <div id='header'>
      <%=  render :partial => "shared/header" %>
    </div>

    <div id="container" class='clearfix'>
      <%- flash.each do |name, msg| -%>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <%- end -%>
      
      <%- if show_title? -%>
        <h2><%=h yield(:title) %></h2>
      <%- end -%>

      <%= yield %>
    </div>

    <div id='footer'>
      <%=  render :partial => "shared/footer" %>
    </div>
  </body>
</html>
